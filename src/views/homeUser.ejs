<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page user</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<style>
    .table-container{
        padding: 15px 20px;
    }
    .title{
        font-size: 25px;
        font-weight: 600;
        padding-bottom: 10px;
    }
    table{
        border-collapse: collapse;
        width: 100%;
    }
    th,td{
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    tr:hover{
        background-color: coral;
    }
</style>
<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">create-user</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div >

    <div class="table-container">
        <!-- <%= JSON.stringify(listusers)  %> -->
        <div class="title">List user</div>
        <table class="w3-table-all w3-hoverable">
            <thead>
            <tr class="w3-light-grey">
                <th>id</th>
                <th>User Name</th>
                <th>Password</th>
                <th>email</th>
                <th>fistname</th>
                <th>lastname</th>
                <th>RoleId</th>
            </tr>
            </thead>
            <% listusers.forEach(function(user) { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.username %></td>
                    <td><%= user.password %></td>
                    <td><%= user.email %></td>
                    <td><%= user.fistname %></td>
                    <td><%= user.lastname %></td>
                    <td><%= user.RoleId %></td>
                    <td >
                        <a style="display: inline;" href="/update-user/<%= user.id %>">edit</a>
                        <form style="display: inline;" action="/delete-user/<%= user.id %>" method="post"><button>delete</button></form>
                    </td>
                </tr>             
            <% }); %> 
        </table>
    </div>
</body>
</html>